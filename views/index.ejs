<!DOCTYPE html>
<html>
<head>
    <title>Flapper News</title>
    <link href="http://maxcdn.bootstrapcdn.com/bootstrap/3.2.0/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://ajax.googleapis.com/ajax/libs/angularjs/1.5.7/angular.min.js"></script>
    <script src="http://cdnjs.cloudflare.com/ajax/libs/angular-ui-router/0.3.2/angular-ui-router.js"></script>
    <script src="/javascripts/angularApp.js"></script>
    <style> .glyphicon-thumbs-up {
        cursor: pointer
    } </style>
</head>
<body ng-app="flapperNews">
<!-- Nav bar -->
<nav class="navbar navbar-default pull-right" ng-controller="NavCtrl">
    <ul class="nav navbar-nav">
        <li ng-show="isLoggedIn()"><a>{{ currentUser() }}</a></li>
        <li ng-show="isLoggedIn()"><a href="" ng-click="logOut()">Log Out</a></li>
        <li ng-hide="isLoggedIn()"><a href="/#/login">Log In</a></li>
        <li ng-hide="isLoggedIn()"><a href="/#/register">Register</a></li>
    </ul>
</nav>
<!-- Main page -->
<div class="row">
    <div class="col-md-6 col-md-offset-3 col-xs-10 col-xs-offset-1">
        <!-- Posts template -->
        <ui-view></ui-view>

    </div>
</div>

<!-- TEMPLATES -->
<!-- POSTS -->
<script type="text/ng-template" id="/home.html">
    <div class="page-header">
        <h1>Flapper News</h1>
    </div>

    <!-- Displaying post lists -->
    <div ng-repeat="post in posts | orderBy:'-upvotes'" class="row">
        <span style="font-size:20px; " class="col-md-9 col-md-offset-1 col-xs-12">
            <a ng-show="post.link" href="{{post.link}}">
                {{post.title}}
            </a>
            <span ng-hide="post.link">
                {{post.title}}
            </span>
            <span ng-show="post.author">
                posted by <a>{{post.author}}</a> |
            </span>
        </span>
        <span style="font-size:15px;" class="col-md-2 col-xs-12">
            <span>
                {{post.upvotes}}
            </span>
            <button class="glyphicon glyphicon-thumbs-up" ng-click="upvote(post)"></button>
            <button class="glyphicon glyphicon-thumbs-down" ng-click="downvote(post)"></button>

        </span>
        <span>
          <a href="#/posts/{{post._id}}">Comments</a>
        </span>

    </div>

    <!-- Button form for adding Posts -->
    <form ng-submit="addPost()" ng-show="isLoggedIn()"
          style="margin-top:30px;">
        <h3>Add a new post</h3>

        <div class="form-group">
            <input type="text" class="form-control" placeholder="Title" ng-model="title"/>
        </div>
        <div class="form-group">
            <input type="text" class="form-control" placeholder="Link" ng-model="link"/>
        </div>
        <button type="submit" class="btn btn-primary">Post</button>
    </form>
    <!-- Message in case you aren't logged in -->
    <div ng-hide="isLoggedIn()">
        <h3>You need to <a href="/#/login">Log In</a> or <a href="/#/register">Register</a> before you can add a post.</h3>
    </div>
</script>

<!-- SINGLE POST  -->
<script type="text/ng-template" id="/posts.html">
    <div class="page-header">
        <h3>
            <a ng-show="post.link" href="{{post.link}}">
                {{post.title}}
            </a>
            <span ng-hide="post.link">
                {{post.title}}
            </span>
        </h3>
    </div>

    <div ng-repeat="comment in post.comments | orderBy:'-upvotes'">
        <button class="glyphicon glyphicon-thumbs-up" ng-click="upvote(comment)"></button>
        <button class="glyphicon glyphicon-thumbs-downvote" ng-click="downvote(comment)"></button>
            {{comment.upvotes}} - by {{comment.author}}
        <span style="font-size:20px; margin-left:10px;">
            {{comment.body}}
        </span>
    </div>

    <!-- Form for adding comments -->
    <form ng-submit="addComment()" ng-show="isLoggedIn()"
          style="margin-top:30px;">
        <h3>Add a new comment</h3>

        <div class="form-group">
            <input type="text" class="form-control" placeholder="Comment" ng-model="body"/>
        </div>
        <button type="submit" class="btn btn-primary">Post</button>
    </form>
    <!-- Message in case you aren't logged in -->
    <div ng-hide="isLoggedIn()">
        <h3>You need to <a href="/#/login">Log In</a> or <a href="/#/register">Register</a> before you can comment.</h3>
    </div>
</script>

<!-- REGISTER -->
<script type="text/ng-template" id="/register.html">
<div class="page-header">
    <h1>Flapper News</h1>
</div>

<div ng-show="error" class="alert alert-danger row">
    <span>{{ error.message }}</span>
</div>

<form ng-submit="register()"
      style="margin-top:30px;">
    <h3>Register</h3>

    <div class="form-group">
        <input type="text"
               class="form-control"
               placeholder="Username"
               ng-model="user.username"></input>
    </div>
    <div class="form-group">
        <input type="password"
               class="form-control"
               placeholder="Password"
               ng-model="user.password"></input>
    </div>
    <button type="submit" class="btn btn-primary">Register</button>
</form>
</script>

<!--LOGIN -->
<script type="text/ng-template" id="/login.html">
    <div class="page-header">
        <h1>Flapper News</h1>
    </div>

    <div ng-show="error" class="alert alert-danger row">
        <span>{{ error.message }}</span>
    </div>

    <form ng-submit="logIn()"
          style="margin-top:30px;">
        <h3>Log In</h3>

        <div class="form-group">
            <input type="text"
                   class="form-control"
                   placeholder="Username"
                   ng-model="user.username"></input>
        </div>
        <div class="form-group">
            <input type="password"
                   class="form-control"
                   placeholder="Password"
                   ng-model="user.password"></input>
        </div>
        <button type="submit" class="btn btn-primary">Log In</button>
    </form>
</script>

</body>
</html>